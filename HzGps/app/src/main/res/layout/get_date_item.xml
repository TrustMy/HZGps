<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.sy.hzgps.MainActivity">
<LinearLayout
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_marginBottom="10dp"
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:layout_height="30dp">

      <ImageView
          android:src="@drawable/order"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
   <TextView
       android:textSize="16sp"
       android:layout_marginLeft="20dp"
       android:text="订单状态:"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <TextView
       android:textSize="16sp"
       android:layout_marginLeft="8dp"
       android:layout_gravity="center_vertical"
       android:id="@+id/get_recycler_item_status"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   </LinearLayout>

   <View
       android:background="#a0a0a0"
       android:layout_width="match_parent"
       android:layout_marginBottom="10dp"
       android:layout_height="0.5dp"/>
   <TextView
       android:text="订单号:"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <TextView
       android:layout_marginBottom="10dp"

       android:id="@+id/get_recycler_item_order"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <LinearLayout
       android:layout_marginBottom="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
   <TextView
       android:text="完成时间:"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <TextView
       android:layout_marginLeft="8dp"
       android:id="@+id/get_recycler_item_time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:layout_marginBottom="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

   <TextView
       android:text="账号:"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <TextView
       android:layout_marginLeft="8dp"
       android:id="@+id/get_recycler_item_termid"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   </LinearLayout>

   <LinearLayout
       android:layout_marginBottom="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
   <TextView
       android:text="起点:"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <TextView
       android:layout_marginLeft="8dp"
       android:id="@+id/get_recycler_item_start"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:layout_marginBottom="10dp"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="horizontal">
   <TextView
       android:text="终点:"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <TextView
       android:layout_marginLeft="8dp"
       android:id="@+id/get_recycler_item_end"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   </LinearLayout>

   <ImageView
       android:layout_marginLeft="8dp"
       android:id="@+id/test_img"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_marginBottom="10dp"
       android:layout_height="wrap_content">
   <Button
       android:layout_alignParentRight="true"
       android:id="@+id/get_recycler_item_submit"
       android:visibility="gone"
       android:textColor="#074056"
       android:background="@drawable/get_date_item_btn"
       android:layout_width="wrap_content"
       android:text="提交"
       android:layout_height="30dp" />

      <Button
          android:layout_alignParentRight="true"
          android:id="@+id/get_recycler_item_found_qr"
          android:visibility="gone"
          android:textColor="#074056"
          android:background="@drawable/get_date_item_btn"
          android:layout_width="wrap_content"
          android:text="查看"
          android:layout_height="30dp"  />


   </RelativeLayout>

</LinearLayout>
</android.support.v7.widget.CardView>
