<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dialog_bg"
    tools:context="com.sy.hzgps.MainActivity">

   <LinearLayout

       android:background="@drawable/dialog_bg"
       android:gravity="center"
       android:orientation="vertical"
       android:layout_width="300dp"
       android:layout_height="wrap_content">

   <TextView
       android:textColor="#01B8EE"
       android:layout_margin="10dp"
       android:gravity="center"
       android:textSize="16sp"
       android:text="请确认\n发票"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <ImageView
       android:id="@+id/dialog_photo_img"
       android:src="@mipmap/ic_launcher"
       android:layout_width="wrap_content"
       android:layout_height="200dp" />

   <TextView
       android:gravity="center"
       android:text="时间"
       android:id="@+id/dialog_photo_time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:background="@drawable/dialog_btn"
       android:orientation="horizontal">
   <Button
       android:id="@+id/dialog_photo_determine"
       android:textColor="#ffffff"
       android:text="确定"
       android:textSize="16sp"
       android:background="#00000000"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content" />

      <Button
          android:textColor="#ffffff"
          android:id="@+id/dialog_photo_cancel"
          android:text="取消"
          android:textSize="16sp"
          android:background="#00000000"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content" />
   </LinearLayout>
   </LinearLayout>
</LinearLayout>
