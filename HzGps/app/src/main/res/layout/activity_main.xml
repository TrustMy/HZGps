<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sy.hzgps.MainActivity">
   <LinearLayout
       android:id="@+id/title"
       android:layout_width="match_parent"
       android:gravity="center"
       android:background="#084059"
       android:orientation="vertical"
       android:layout_height="200dp">
   <ImageView
       android:visibility="gone"
       android:id="@+id/main_logo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/truck"
       android:layout_alignParentTop="true"></ImageView>

      <TextView
          android:visibility="gone"
          android:id="@+id/main_prompt"
          android:layout_marginTop="10dp"
          android:text="车辆行驶中..."
          android:textSize="24sp"
          android:textColor="#ffffff"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <com.amap.api.maps.MapView
          android:id="@+id/map"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

         <Button
             android:onClick="selecGps"
             android:text="查询"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         <Button
             android:layout_marginTop="60dp"
             android:onClick="delGps"
             android:text="删除"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

      </com.amap.api.maps.MapView>
   </LinearLayout>
   <LinearLayout
       android:layout_below="@+id/title"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent">

      <LinearLayout
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="40dp">

         <LinearLayout
             android:gravity="center"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:orientation="horizontal"
             android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/speed"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">

               <TextView

                   android:textSize="16sp"
                   android:text="当前速度:"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:orientation="horizontal"
                   android:layout_weight="1">

                  <TextView
                      android:gravity="center"
                      android:textColor="#ff9000"
                      android:id="@+id/main_gps"
                      android:text="---------"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent" />

                  <TextView
                      android:text="Km/h"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent" />
               </LinearLayout>

            </LinearLayout>

         </LinearLayout>
         <LinearLayout
             android:gravity="center"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:orientation="horizontal"
             android:layout_height="match_parent">
            <ImageView
                android:layout_marginRight="4dp"
                android:src="@drawable/stopwatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">

               <TextView
                   android:textSize="16sp"
                   android:text="运行时间:"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:orientation="horizontal"
                   android:layout_weight="1">

                  <TextView
                      android:gravity="center"
                      android:textColor="#ff9000"
                      android:id="@+id/main_time"
                      android:text="---------"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent" />

                  <TextView
                      android:text="分钟"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent" />
               </LinearLayout>

            </LinearLayout>

         </LinearLayout>
      </LinearLayout>



      <TextView
          android:visibility="gone"
          android:id="@+id/main_work_msg"
          android:text="请在工作列表中选择要开始的工作"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <View
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:background="#b8b8b8"
          android:layout_height="1dp"/>




      <LinearLayout
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:gravity="center"
          android:background="@drawable/ed_bg"
          android:orientation="horizontal">
         <TextView
             android:text="我的起点:"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <EditText
             android:id="@+id/main_start_location_ed"
             android:background="@null"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

      </LinearLayout>


      <LinearLayout
          android:visibility="gone"
          android:id="@+id/main_end_location_ed_layout"
          android:layout_marginTop="10dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:background="@drawable/ed_bg"
          android:orientation="horizontal">
         <TextView
             android:text="我的终点:"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <EditText
             android:id="@+id/main_end_location_ed"
             android:background="@null"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

      </LinearLayout>


      <Button
          android:visibility="gone"
          android:id="@+id/start"
          android:text="开始"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <Button
          android:visibility="gone"
          android:id="@+id/end"
          android:text="结束"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <LinearLayout
          android:gravity="center"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
         <TextView
             android:visibility="gone"
             android:layout_marginBottom="10dp"
             android:textColor="#ff0000"
             android:text="请确定车辆到达收货点后在按结束,\n一旦点击后,表示此次运输结束!"
             android:id="@+id/main_prompt_work"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

      <ImageButton
          android:id="@+id/main_start_gps"
          android:onClick="startGps"
          android:text="startGps"
          android:background="@drawable/start"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <ImageButton
          android:visibility="gone"
          android:id="@+id/main_end_gps"
          android:onClick="endGps"
          android:text="endGps"
          android:background="@drawable/end"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      </LinearLayout>
   </LinearLayout>


</RelativeLayout>
